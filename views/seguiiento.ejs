<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ABAI Dashboard - Seguimiento de Movimientos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-blue: #1b263b;
            --gradient-start: #4facfe;
            --gradient-end: #1b263b;
            --font-family-base: 'Segoe UI', Roboto, Arial, sans-serif;
        }
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            font-family: var(--font-family-base);
        }
        #wrapper {
            display: flex;
            height: 100vh;
            width: 100%;
        }
        #sidebar-wrapper {
            min-height: 100vh;
            width: 250px;
            flex-shrink: 0;
            transition: margin-left .25s ease-out;
            background: linear-gradient(180deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        }
        .bg-dark-blue {
            background-color: var(--primary-blue) !important;
        }
        .sidebar-heading {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logo {
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }
        .logo-text {
            font-size: 1.8rem;
            font-weight: 700;
            color: #fff;
            margin: 0;
        }
        #page-content-wrapper {
            flex-grow: 1;
        }
        .list-group-item {
            border-left: 0;
            border-right: 0;
            border-radius: 0;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }
        .list-group-item.active {
            background-color: rgba(255, 255, 255, 0.15) !important;
            border-left: 5px solid #0d6efd;
            padding-left: 1rem !important;
        }
        .list-group-item:hover {
            background-color: rgba(255, 255, 255, 0.1) !important;
            color: #fff;
        }
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
        .table thead th {
            background-color: #e9ecef;
            font-weight: 600;
        }
        .table-striped > tbody > tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.03);
        }
        .card {
            flex-grow: 1;
        }
        .table-responsive {
            flex-grow: 1;
            overflow-y: auto;
        }
        .mt-auto {
            margin-top: auto !important;
        }
        .text-end {
            text-align: right;
        }
        #form-feedback {
            font-size: 0.875em;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark-blue border-end" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <img src="img/logo_principal_abai-removebg-preview.png" alt="ABAI Logo" class="logo" style="width: 56%;">
            </div>
            <div class="list-group list-group-flush">
                <a href="dashboard.html" class="list-group-item list-group-item-action active  bg-dark-blue text-white p-3"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
                <a href="equipos.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-laptop me-2"></i> Equipos</a>
                <a href="categoria.html" class="list-group-item list-group-item-action active  bg-dark-blue text-white p-3"><i class="bi bi-tags-fill me-2"></i> Categorías</a>
                <a href="sedes.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-building me-2"></i> Sedes</a>
                <a href="seguimiento.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-graph-up-arrow me-2"></i> Seguimiento</a>
                <a href="stock.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-box-seam me-2"></i> Stock</a>
                <a href="centro_costos.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-cash-stack me-2"></i> Centro de Costos</a>
                <a href="provedor.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-truck-flatbed me-2"></i> Proveedores</a>
            </div>
        </div>
        <div id="page-content-wrapper" class="w-100 bg-light">
            <div class="container-fluid py-5 h-100 d-flex flex-column">
                <div class="mx-auto" style="max-width: 1300px; width: 100%;">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h1 class="h3">Seguimiento de Movimientos</h1>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalMovimiento">
                            <i class="bi bi-plus-circle me-2"></i>
                            Registrar movimiento
                        </button>
                    </div>
                    <div class="card p-3 shadow-sm flex-grow-1 d-flex flex-column">
                        <div class="table-responsive flex-grow-1">
                            <table class="table table-striped table-hover mb-0" id="tabla-movimientos">
                                <thead>
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Piso</th>
                                        <th>Rol</th>
                                        <th>Equipo</th>
                                        <th>Sede Origen</th>
                                        <th>Sede Destino</th>
                                        <th>Cantidad</th>
                                        <th>Tipo de Movimiento</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>2024-06-01</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>Laptop HP</td>
                                        <td>Sede Central</td>
                                        <td>Sucursal Norte</td>
                                        <td>2</td>
                                        <td>Traslado</td>
                                        <td class="text-end">
                                            <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Eliminar</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>2024-06-02</td>
                                        <td>-</td>
                                        <td>-</td>
                                        <td>Silla ergonómica</td>
                                        <td>-</td>
                                        <td>Sede Central</td>
                                        <td>5</td>
                                        <td>Ingreso</td>
                                        <td class="text-end">
                                            <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Eliminar</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalMovimiento" tabindex="-1" aria-labelledby="modalMovimientoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalMovimientoLabel">Registrar nuevo movimiento</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form id="form-movimiento">
                        <p id="form-feedback" class="text-danger d-none"></p>
                        <div class="mb-3">
                            <label for="fecha-movimiento" class="form-label">Fecha</label>
                            <input type="date" class="form-control" id="fecha-movimiento" required>
                        </div>
                        <div class="mb-3">
                            <label for="piso-movimiento" class="form-label">Piso</label>
                            <select class="form-control" id="piso-movimiento" required>
                                <option value="">Seleccione un piso</option>
                                <option>Piso 1. Administrador </option>
                                <option>Piso 1. Plataforma</option>
                                <option>Piso 2</option>
                                <option>Piso 3</option>
                                <option>Piso 4</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="rol-movimiento" class="form-label">Rol</label>
                            <select class="form-control" id="rol-movimiento" required>
                                <option value="">Seleccione un rol</option>
                                <option>Administrador</option>
                                <option>Plataforma</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="equipo-movimiento" class="form-label">Equipo</label>
                            <input type="text" class="form-control" id="equipo-movimiento" placeholder="Ej: Laptop HP" required>
                        </div>
                        <div class="mb-3">
                            <label for="tipo-movimiento" class="form-label">Tipo de Movimiento</label>
                            <select class="form-control" id="tipo-movimiento" required>
                                <option value="">Seleccione tipo</option>
                                <option>Ingreso</option>
                                <option>Egreso</option>
                                <option>Traslado</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="sede-origen" class="form-label">Sede Origen</label>
                            <input type="text" class="form-control" id="sede-origen" placeholder="Ej: Sede Principal">
                        </div>
                        <div class="mb-3">
                            <label for="sede-destino" class="form-label">Sede Destino</label>
                            <input type="text" class="form-control" id="sede-destino" placeholder="Ej: Sucursal Centro">
                        </div>
                        <div class="mb-3">
                            <label for="cantidad-movimiento" class="form-label">Cantidad</label>
                            <input type="number" class="form-control" id="cantidad-movimiento" min="1" required>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('form-movimiento').addEventListener('submit', function(e) {
            e.preventDefault();

            const form = e.target;
            const fecha = form['fecha-movimiento'].value;
            const piso = form['piso-movimiento'].value;
            const rol = form['rol-movimiento'].value;
            const equipo = form['equipo-movimiento'].value.trim();
            const tipo = form['tipo-movimiento'].value;
            const origen = form['sede-origen'].value.trim() || '-';
            const destino = form['sede-destino'].value.trim() || '-';
            const cantidad = form['cantidad-movimiento'].value;

            // Validación de campos requeridos
            const feedbackElement = document.getElementById('form-feedback');
            if (!fecha || !equipo || !tipo || !cantidad || !piso || !rol) {
                feedbackElement.textContent = 'Por favor, completa todos los campos requeridos.';
                feedbackElement.classList.remove('d-none');
                return;
            } else {
                feedbackElement.classList.add('d-none');
            }

            // Crear y añadir la nueva fila a la tabla
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td>${fecha}</td>
                <td>${piso}</td>
                <td>${rol}</td>
                <td>${equipo}</td>
                <td>${origen}</td>
                <td>${destino}</td>
                <td>${cantidad}</td>
                <td>${tipo}</td>
                <td class="text-end">
                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Eliminar</button>
                </td>
            `;
            document.querySelector('#tabla-movimientos tbody').appendChild(tr);

            // Reiniciar el formulario y cerrar el modal
            form.reset();
            const modal = bootstrap.Modal.getInstance(document.getElementById('modalMovimiento'));
            modal.hide();
        });

        // Event listener para eliminar filas de la tabla
        document.querySelector('#tabla-movimientos tbody').addEventListener('click', function(e) {
            if (e.target.closest('.btn-danger')) {
                e.target.closest('tr').remove();
            }
        });
    </script>
</body>
</html>
