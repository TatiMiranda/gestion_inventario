<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ABAI Dashboard - Sedes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-blue: #1b263b;
            --gradient-start: #4facfe;
            --gradient-end: #1b263b;
            --font-family-base: 'Segoe UI', Roboto, Arial, sans-serif;
        }
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
            font-family: var(--font-family-base);
        }
        #wrapper {
            display: flex;
            height: 100vh;
            width: 100%;
        }
        #sidebar-wrapper {
            min-height: 100vh;
            width: 250px;
            flex-shrink: 0;
            transition: margin-left .25s ease-out;
            background: linear-gradient(180deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        }
        .bg-dark-blue {
            background-color: var(--primary-blue) !important;
        }
        .sidebar-heading {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .logo {
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }
        .logo-text {
            font-size: 1.8rem;
            font-weight: 700;
            color: #fff;
            margin: 0;
        }
        #page-content-wrapper {
            flex-grow: 1;
        }
        .list-group-item {
            border-left: 0;
            border-right: 0;
            border-radius: 0;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }
        .list-group-item.active {
            background-color: rgba(255, 255, 255, 0.15) !important;
            border-left: 5px solid #0d6efd;
            padding-left: 1rem !important;
        }
        .list-group-item:hover {
            background-color: rgba(255, 255, 255, 0.1) !important;
            color: #fff;
        }
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }
        .table thead th {
            background-color: #e9ecef;
            font-weight: 600;
        }
        .table-striped > tbody > tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.03);
        }
        .card {
            flex-grow: 1;
        }
        .table-responsive {
            flex-grow: 1;
            overflow-y: auto;
        }
        .mt-auto {
            margin-top: auto !important;
        }
        .text-end {
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark-blue border-end" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <img src="img/logo_principal_abai-removebg-preview.png" alt="ABAI Logo" class="logo" style="width: 56%;">
            </div>
            <div class="list-group list-group-flush">
                <a href="dashboard.html" class="list-group-item list-group-item-action active  bg-dark-blue text-white p-3"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>
                <a href="equipos.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-laptop me-2"></i> Equipos</a>
                <a href="categoria.html" class="list-group-item list-group-item-action active  bg-dark-blue text-white p-3"><i class="bi bi-tags-fill me-2"></i> Categorías</a>
                <a href="sedes.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-building me-2"></i> Sedes</a>
                <a href="seguimiento.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-graph-up-arrow me-2"></i> Seguimiento</a>
                <a href="stock.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-box-seam me-2"></i> Stock</a>
                <a href="centro_costos.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-cash-stack me-2"></i> Centro de Costos</a>
                <a href="provedor.html" class="list-group-item list-group-item-action active bg-dark-blue text-white p-3"><i class="bi bi-truck-flatbed me-2"></i> Proveedores</a>
            </div>
        </div>
        <div id="page-content-wrapper" class="w-100 bg-light">
            <div class="container-fluid py-5 h-100 d-flex flex-column">
                <div class="mx-auto" style="max-width: 1300px; width: 100%;">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h1 class="h3">Sedes</h1>
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalSede">
                            <i class="bi bi-plus-circle me-2"></i>
                            Agregar sede
                        </button>
                    </div>
                    <div class="card p-3 shadow-sm flex-grow-1 d-flex flex-column">
                        <div class="table-responsive flex-grow-1">
                            <table class="table table-striped table-hover mb-0" id="tabla-sedes">
                                <thead>
                                    <tr>
                                        <th>Nombre de la sede</th>
                                        <th>Dirección</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <select class="form-select form-select-sm">
                                                <option selected>Sede Pereira</option>
                                                <option>Sede Bogotá</option>
                                                <option>Sede Arboleda</option>
                                                <option>Sede Panamericana</option>
                                            </select>
                                        </td>
                                        <td>
                                            </td>
                                        <td class="text-end">
                                            <button class="btn btn-warning btn-sm me-2">
                                                <i class="bi bi-pencil-fill"></i> Editar
                                            </button>
                                            <button class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash-fill"></i> Eliminar
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="modalSede" tabindex="-1" aria-labelledby="modalSedeLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalSedeLabel">Agregar nueva sede</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form id="form-sede">
                        <div class="mb-3">
                            <label for="nombre-sede" class="form-label">Nombre de la sede</label>
                            <input type="text" class="form-control" id="nombre-sede" required>
                        </div>
                        <div class="mb-3">
                            <label for="direccion-sede" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="direccion-sede" required>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Agregar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Simple JS para agregar la sede a la tabla (sin backend)
        document.getElementById('form-sede').addEventListener('submit', function(e) {
            e.preventDefault();
            const nombre = document.getElementById('nombre-sede').value.trim();
            const direccion = document.getElementById('direccion-sede').value.trim();
            if(nombre && direccion) {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${nombre}</td>
                    <td>${direccion}</td>
                    <td class="text-end">
                        <button class="btn btn-warning btn-sm me-2"><i class="bi bi-pencil-fill"></i> Editar</button>
                        <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Eliminar</button>
                    </td>
                `;
                document.querySelector('#tabla-sedes tbody').appendChild(tr);
                document.getElementById('form-sede').reset();
                const modal = bootstrap.Modal.getInstance(document.getElementById('modalSede'));
                modal.hide();
            }
        });
    </script>
</body>
</html>