                                <tr>
                                    <td>Carlos Ruiz</td>
                                    <td>Usuario</td>
                                    <td>2024-05-28</td>
                                    <td class="text-end">
                                        <button class="btn btn-warning btn-sm me-2"><i class="bi bi-pencil-fill"></i> Editar</button>
                                        <button class="btn btn-danger btn-sm"><i class="bi bi-trash-fill"></i> Eliminar</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /Tabla -->
            </div>
        </div>
    </div>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
