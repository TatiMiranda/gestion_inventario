    .btn-register {
      width: 100%;
      height: 45px;
      font-weight: bold;
      background: #1b263b;
      border: none;
      color: #fff;
      border-radius: 6px;
      transition: all 0.3s ease;
    }

    .btn-register:hover {
      background: #162033;
    }

    .links {
      margin-top: 1.5rem;
      font-size: 0.9rem;
    }

    .links a {
      color: #1b263b;
      text-decoration: none;
      font-weight: 500;
      font-size: 1.1rem;
    }

    .links a:hover {
